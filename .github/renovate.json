{
  "extends": [
    "config:base"
  ],
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "packagePatterns": ["^@serenity-js"],
      "groupName": "Serenity/JS",
      "automerge": true
    },
    {
      "packagePatterns": ["^eslint$", "^eslint-plugin", "^@typescript-eslint"],
      "groupName": "ESLint",
      "automerge": true
    },
    {
      "packagePatterns": [
        "^playwright$",
        "^@playwright/"
      ],
      "groupName": "Playwright",
      "automerge": false
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ]
}
